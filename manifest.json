{
  "manifest_version": 3,
  "name": "Sticky Fullscreen",
  "version": "1.1.0",
  "description": "Maintains fullscreen mode for specific domains across redirects.",
  "permissions": [
    "storage",
    "windows",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Sticky Fullscreen",
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}